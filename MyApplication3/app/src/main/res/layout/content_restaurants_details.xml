<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/NSVRestaurans"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161616"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RestaurantsDetails"
    tools:showIn="@layout/activity_restaurants_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <include
            layout="@layout/restaurants_informations_cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/details_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            tools:listitem="@layout/type_cardview" />

        <fragment
            android:id="@+id/fragment"
            android:name="com.bookt.myapplication.MapFragment"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:tag="tag"
            tools:layout="@layout/fragment_map" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>