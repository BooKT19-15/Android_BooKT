<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#161616"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".RestaurantDetailsActivity"
        tools:showIn="@layout/app_bar_restaurant_details">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#161616"
        android:orientation="vertical">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/dollarThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="3dp"
                android:text="$"
                android:textColor="@color/red"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/dollarFour"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/dollarFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="$"
                android:textColor="#E5E5E5"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/resCuisineTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:text="Cuisine"
                android:textColor="#E5E5E5"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ressTimeTitle"
                app:layout_constraintTop_toBottomOf="@+id/locationImage" />

            <TextView
                android:id="@+id/closeHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="1:00 pm"
                android:textColor="@color/light_grey"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ressTimeTitle" />

            <TextView
                android:id="@+id/openHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="2:00pm"
                android:textColor="@color/light_grey"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@+id/closeHour"
                app:layout_constraintTop_toBottomOf="@+id/ressTimeTitle" />

            <TextView
                android:id="@+id/dollarOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="3dp"
                android:text="$"
                android:textColor="@color/red"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/dollarTwo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/restaurantLocation"
                android:layout_width="match_parent"
                android:layout_height="18dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="16dp"
                android:text="Al Nahda, The Market Place Gungahlim Place, Gungahlin ACT 2912"
                android:textColor="@color/light_grey"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/locationImage"
                app:layout_constraintTop_toBottomOf="@+id/restaurantName" />

            <ImageView
                android:id="@+id/locationImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"

                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/restaurantName"
                app:srcCompat="@drawable/ic_location_on_light_grey_24dp" />

            <TextView
                android:id="@+id/dollarTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="3dp"
                android:text="$"
                android:textColor="@color/red"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/dollarThree"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/ressTimeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="Open Hour"
                android:textColor="#E5E5E5"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/locationImage" />

            <Button
                android:id="@+id/reserveButton"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@color/red_app"
                android:onClick="processReservationButton"
                android:text="RESERVE"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/resCuisine"
                app:layout_constraintEnd_toEndOf="@+id/dollarFour"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/resCuisineTitle"
                app:layout_constraintTop_toTopOf="@+id/resCuisineTitle"
                app:layout_constraintVertical_bias="0.421" />

            <TextView
                android:id="@+id/resCuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Pizza"
                android:textColor="@color/light_grey"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/resCuisineTitle"
                app:layout_constraintTop_toBottomOf="@+id/resCuisineTitle"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="90dp"
                android:gravity="center_vertical"
                android:text="Crust Gourmet Pizza Bar"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/dollarOne"
                app:layout_constraintHorizontal_bias="0.062"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fillerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="- Order now for later when restaurant opens."
                android:textColor="@color/light_grey"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/closeHour" />

        </android.support.constraint.ConstraintLayout>

        <ExpandableListView
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:background="#161616"
            android:fadeScrollbars="false"
            android:focusable="false"
            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ExpandableListView>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/locationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="4dp"
                android:text="Location"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toStartOf="@id/locationText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="Al Nahda"
                android:textAlignment="viewStart"
                android:textColor="@color/light_grey"
                app:layout_constraintStart_toEndOf="@id/locationTitle"
                app:layout_constraintTop_toTopOf="parent" />

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                map:layout_constraintStart_toStartOf="parent"
                map:layout_constraintTop_toTopOf="parent"
                tools:context="app.com.example.android.googlemapsdemo.MapsActivity">

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="mapViewProcess"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </fragment>

        </android.support.constraint.ConstraintLayout>


        <!--<android.support.v7.widget.CardView-->
            <!--android:id="@+id/galleryImagesCard"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="400dp"-->
            <!--android:layout_marginStart="8dp"-->
            <!--android:layout_marginTop="25dp"-->
            <!--android:layout_marginEnd="8dp"-->
            <!--android:layout_marginBottom="25dp"-->
            <!--app:cardBackgroundColor="#161616">-->

            <!---->
        <!--</android.support.v7.widget.CardView>-->
        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayoutGallery"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/galleryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:text="Gallery"
                android:textColor="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/galleryTitle"
                tools:ignore="NotSibling">

                <ImageView
                    android:id="@+id/galleryImageLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="0.5"
                    android:onClick="clickHandler"
                    android:scaleType="fitXY"
                    android:tag="imageOne"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/galleryTitle"
                    app:srcCompat="@drawable/icon" />

                <ImageView
                    android:id="@+id/galleryImageRight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="0.5"
                    android:onClick="clickHandler"
                    android:scaleType="fitXY"
                    android:tag="imageTwo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/galleryTitle"
                    app:srcCompat="@drawable/icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="horizontal"
                android:weightSum="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <ImageView
                    android:id="@+id/galleryImageBottomLeft"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="0.5"
                    android:onClick="clickHandler"
                    android:scaleType="fitXY"
                    android:tag="imageThree"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/galleryImageLeft"
                    app:srcCompat="@drawable/icon" />

                <ImageView
                    android:id="@+id/galleryImageBottomRight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="0.5"
                    android:onClick="clickHandler"
                    android:scaleType="fitXY"
                    android:tag="imageFour"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/galleryImageRight"
                    app:srcCompat="@drawable/icon" />
            </LinearLayout>

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>