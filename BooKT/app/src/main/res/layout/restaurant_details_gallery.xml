<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <TextView
        android:id="@+id/galleryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Gallery"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/midSplitter"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/galleryTitle"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:tag="imageOne"
        android:id="@+id/galleryImageLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/midSplitter"
        app:layout_constraintEnd_toStartOf="@+id/midSplitter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/galleryTitle"
        app:srcCompat="@drawable/icon"
        android:onClick="clickHandler"/>

    <ImageView
        android:tag="imageTwo"
        android:id="@+id/galleryImageRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/midSplitter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/midSplitter"
        app:layout_constraintTop_toBottomOf="@+id/galleryTitle"
        app:srcCompat="@drawable/icon"
        android:onClick="clickHandler"/>

    <ImageView
        android:tag="imageThree"
        android:id="@+id/galleryImageBottomLeft"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/galleryImageLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/galleryImageLeft"
        app:srcCompat="@drawable/icon"
        android:onClick="clickHandler"/>

    <ImageView
        android:tag="imageFour"
        android:id="@+id/galleryImageBottomRIght"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_margin="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/midSplitter"
        app:layout_constraintTop_toBottomOf="@+id/galleryImageRight"
        app:srcCompat="@drawable/icon"
        android:onClick="clickHandler"/>
</android.support.constraint.ConstraintLayout>