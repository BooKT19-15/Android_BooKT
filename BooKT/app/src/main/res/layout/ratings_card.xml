<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ratingConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/starTwoNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="3"
        android:textColor="@color/light_grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/starFour" />

    <TextView
        android:id="@+id/starOneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="5"
        android:textColor="@color/light_grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/starFive" />

    <TextView
        android:id="@+id/starThreeNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="160"
        android:textColor="@color/light_grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/starThree" />

    <TextView
        android:id="@+id/starFourNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="321"
        android:textColor="@color/light_grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/startwo" />

    <TextView
        android:id="@+id/ratingsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Restaurant Ratings"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0"
        android:textColor="@color/red_app"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/ratingBar"
        app:layout_constraintEnd_toEndOf="@+id/ratingBar"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"
        app:layout_constraintTop_toTopOf="@+id/starOne" />

    <TextView
        android:id="@+id/seeAll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="reviewsActivity"
        android:text="SEE ALL REVIEWS"
        android:textAlignment="textEnd"
        android:textAllCaps="false"
        android:textColor="@color/light_grey"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar1" />

    <TextView
        android:id="@+id/starOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="5"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/starFive"
        app:layout_constraintTop_toBottomOf="@+id/ratingsTitle" />

    <ProgressBar
        android:id="@+id/progressBar5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:progress="50"
        android:progressDrawable="@drawable/progressbar_style"
        app:layout_constraintBottom_toTopOf="@+id/startwo"
        app:layout_constraintEnd_toStartOf="@+id/starFiveNum"
        app:layout_constraintStart_toEndOf="@+id/starOne"
        app:layout_constraintTop_toTopOf="@+id/starOne" />

    <TextView
        android:id="@+id/starFiveNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="561"
        android:textColor="@color/light_grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/starOne" />

    <TextView
        android:id="@+id/startwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="4"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/starThree"
        app:layout_constraintTop_toBottomOf="@+id/starOne" />

    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:progress="30"
        android:progressDrawable="@drawable/progressbar_style"
        app:layout_constraintBottom_toTopOf="@+id/starThree"
        app:layout_constraintEnd_toStartOf="@+id/starFourNum"
        app:layout_constraintStart_toEndOf="@+id/startwo"
        app:layout_constraintTop_toTopOf="@+id/startwo" />

    <TextView
        android:id="@+id/starThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="3"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/starFour"
        app:layout_constraintTop_toBottomOf="@+id/startwo" />

    <ProgressBar
        android:id="@+id/progressBar3"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:progress="15"
        android:progressDrawable="@drawable/progressbar_style"
        app:layout_constraintBottom_toTopOf="@+id/starFour"
        app:layout_constraintEnd_toStartOf="@+id/starThreeNum"
        app:layout_constraintStart_toEndOf="@+id/starThree"
        app:layout_constraintTop_toTopOf="@+id/starThree" />

    <TextView
        android:id="@+id/starFour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="2"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/starFive"
        app:layout_constraintTop_toBottomOf="@+id/starThree" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:progress="2"
        android:progressDrawable="@drawable/progressbar_style"
        app:layout_constraintBottom_toTopOf="@+id/starFive"
        app:layout_constraintEnd_toStartOf="@+id/starTwoNum"
        app:layout_constraintStart_toEndOf="@+id/starFour"
        app:layout_constraintTop_toTopOf="@+id/starFour" />

    <TextView
        android:id="@+id/starFive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="2dp"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/ratingBar"
        app:layout_constraintTop_toBottomOf="@+id/starFour" />

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:progress="2"
        android:progressDrawable="@drawable/progressbar_style"
        app:layout_constraintBottom_toBottomOf="@+id/starFive"
        app:layout_constraintEnd_toStartOf="@+id/starOneNum"
        app:layout_constraintStart_toEndOf="@+id/starFive"
        app:layout_constraintTop_toTopOf="@+id/starFive" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        android:numStars="5"
        android:rating="3.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/progressBar1"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/totalRatings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(1050)"
        android:textColor="@color/light_grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/rating"
        app:layout_constraintStart_toStartOf="@+id/rating"
        app:layout_constraintTop_toBottomOf="@+id/rating" />

</android.support.constraint.ConstraintLayout>